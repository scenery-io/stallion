{
	"name": "cavalry-bridge",
	"displayName": "Stallion",
	"description": "A scripting bridge for Cavalry",
	"version": "0.3.0",
	"main": "./out/main.js",
	"publisher": "Scenery",
	"repository": {
		"type": "git",
		"url": "https://github.com/scenery-io/stallion.git"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"title": "Send To Cavalry",
				"command": "stallion.post"
			},
			{
				"title": "Send To Cavalry Asâ€¦",
				"command": "stallion.postas"
			},
			{
				"title": "Insert Cavalry Types",
				"command": "stallion.insert"
			}
		]
	},
	"scripts": {
		"start": "npm run cavalry && npm run esbuild-watch",
		"vscode:prepublish": "npm run cavalry && npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"publish": "npx vsce publish",
		"cavalry": "node ./build/cavalry.js"
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"bracketSpacing": true,
		"arrowParens": "always"
	},
	"dependencies": {
		"@scenery/cavalry-types": "^0.5.0",
		"axios": "^1.1.3",
		"firstline": "^2.0.2",
		"tempy": "^3.0.0"
	},
	"devDependencies": {
		"@types/firstline": "^2.0.2",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "16.x",
		"@types/vscode": "^1.72.0",
		"@vscode/test-electron": "^2.1.5",
		"esbuild": "^0.15.14",
		"eslint": "^8.24.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.8.4",
		"vsce": "^2.15.0"
	}
}
