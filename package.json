{
	"private": true,
	"name": "cavalry-bridge",
	"displayName": "Stallion",
	"description": "Scripting bridge for Cavalry",
	"version": "0.6.1",
	"publisher": "Scenery",
	"main": "./dist/extension.js",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/scenery-io/stallion.git"
	},
	"engines": {
		"vscode": "^1.101.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"title": "Send To Cavalry",
				"command": "stallion.post",
				"enablement": "activeEditor"
			},
			{
				"title": "Send To Cavalry Asâ€¦",
				"command": "stallion.postas",
				"enablement": "activeEditor"
			},
			{
				"title": "Insert Cavalry Types",
				"command": "stallion.insert",
				"enablement": "activeEditor"
			}
		]
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development npm run build",
		"build": "node ./scripts/build.ts",
		"vscode:prepublish": "cross-env NODE_ENV=production npm run build",
		"publish": "npx @vscode/vsce publish",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"lint": "eslint ."
	},
	"prettier": {
		"trailingComma": "all",
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"bracketSpacing": true,
		"arrowParens": "always"
	},
	"devDependencies": {
		"@scenery/cavalry-types": "^0.5.0",
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.101.0",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.1",
		"cross-env": "^10.1.0",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"glob": "^13.0.0",
		"mocha": "^11.7.5",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3"
	}
}
